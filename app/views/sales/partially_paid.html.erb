<% if notice %>
    <p class= 'alert alert-success'><%= notice %></p>
<% end %>
</br>
<%= link_to 'New Invoice', sales_invoice_path,  class: "btn btn-primary col-md-4" %> <%= link_to 'Drafts', sales_draft_index_path,  class: "btn btn-default pull-right" %><%= link_to 'Outstanding', sales_paid_path,  class: "btn btn-danger pull-right" %><%= link_to 'Partially Paid', sales_partially_paid_path,  class: "btn btn-warning pull-right" %><%= link_to 'Paid', sales_paid_path,  class: "btn btn-success pull-right" %><%= link_to 'All', sales_path,  class: "btn btn-info pull-right" %>  


<br><br>
<div class= "card">
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Supplier</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Paid amount</th>
      <th> Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <tbody>
    <% @transactions.each do |transactions| %>
    <% if transactions.sale_id != nil &&  transactions.total_amount < transactions.sale.amount &&  transactions.total_amount  > 0  %>
      <tr>
        <td><%= link_to transactions.sale.date,  sale_path(transactions.sale)%></td>
        <td><%= transactions.sale.contact_id ? transactions.sale.contact.name : 'No customer'  %></td>
        <td><%= "Inv #{transactions.sale.id}" %></td>
           <td><%= transactions.sale.amount %></td>
              <td> <%= transactions.total_amount %> </td>
              <td> <%= transactions.sale.amount.round(2) + transactions.total_amount.round(2) %> </td>
        
             <% end %>
              <% end %>
      </td>   
      
      </tr>

  </tbody>
</table>
</div>

<br>


