<% if notice %>
    <p class= 'alert alert-success'><%= notice %></p>
<% end %>
</br>
<%= link_to 'New Invoice', purchases_invoice_path,  class: "btn btn-primary col-md-4" %> <%= link_to 'Drafts', purchases_draft_index_path,  class: "btn btn-default pull-right" %><%= link_to 'Outstanding', purchases_paid_path,  class: "btn btn-danger pull-right" %><%= link_to 'Partially Paid', purchases_partially_paid_path,  class: "btn btn-warning pull-right" %><%= link_to 'Paid', purchases_paid_path,  class: "btn btn-success pull-right" %><%= link_to 'All', purchases_path,  class: "btn btn-info pull-right" %>  


<br><br>
<div class= "card">
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Supplier</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Paid amount</th>
      <th> Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transactions| %>
    <% if transactions.purchase_id != nil &&  transactions.total_amount * -1 >= transactions.purchase.amount %>
      <tr>
        <td><%= link_to transactions.purchase.date,  purchase_path(transactions.purchase)%></td>
        <td><%= transactions.purchase.contact_id ? transactions.purchase.contact.name : 'No customer'  %></td>
        <td><%= "Inv #{transactions.purchase.id}" %></td>
             <td><%= transactions.purchase.amount %></td>
              <td> <%= transactions.total_amount %> </td>
              <td> <%= transactions.purchase.amount + transactions.total_amount %> </td>
             <% end %>
              <% end %>
      </td>   
      
      </tr>

  </tbody>
</table>
</div>

<br>


